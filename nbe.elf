nbe : env -> tm -> tm -> tm -> type.
%mode nbe +R +M +N -N'.

- : nbe R A M M'''
     <- meaning M R M'
     <- meaning A R A'
     <- reify A' M' M''
     <- length R L
     <- quote L M'' M'''.

%worlds () (nbe _ _ _ _).
%covers nbe +R +M +N -N'.

nbe-ty : env -> tm -> tm -> type.
%mode nbe-ty +R +A -A'.

- : nbe-ty R A A'''
     <- meaning A R A'
     <- reify-ty A' A''
     <- length R L
     <- quote L A'' A'''.

%worlds () (nbe-ty _ _ _).
%covers nbe-ty +R +A -A'.
